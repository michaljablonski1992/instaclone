- flash.sort { |a, b| b[0] <=> a[0] }.each do |name, msg|
  - klass = ['flash','alert', "alert-#{flash_class(name)}", 'text-center']
  - data = { controller: 'flash', action: 'animationend->flash#remove click->flash#remove' }
  - if msg.present?
    - if msg.is_a?(Array)
      - msg.each do |_msg|
        = content_tag :div, _msg.html_safe, class: klass, data: data
    - else
      = content_tag :div, msg.html_safe, class: klass, data: data
