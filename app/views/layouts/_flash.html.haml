- flash.sort { |a, b| b[0] <=> a[0] }.each do |name, msg|
  - if msg.present?
    - if msg.is_a?(Array)
      - msg.each do |_msg|
        = content_tag :div, _msg.html_safe, class: ['alert', "alert-#{flash_class(name)}", 'text-center']
    - else
      = content_tag :div, msg.html_safe, class: ['alert', "alert-#{flash_class(name)}", 'text-center']
