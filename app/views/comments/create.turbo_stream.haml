- if @comment.valid?
  = turbo_stream.replace(post_comments_id(@post), partial: 'posts/post_comments', locals: { post: @post })
  = turbo_stream.replace(post_comments_modal_content_id(@post), partial: 'posts/comments_modal_content', locals: { post: @post })
  - @show_modal = true # in case there is show modal shown
  = turbo_stream.replace(post_comments_id(@post), partial: 'posts/post_comments', locals: { post: @post })
- else
  - flash.now[:alert] = @comment.errors.full_messages
  = turbo_stream.prepend 'flash_message', partial: 'layouts/flash'