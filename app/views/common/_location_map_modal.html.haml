#mapModal.modal.fade.modal-xl{aria: { hidden: 'true', labelledby: 'mapModalLabel'}, tabindex: "-1", data: { controller: 'maps', maps_target: 'modal', bs_backdrop: 'static', bs_keyboard: 'false' } }
  .modal-dialog.modal-dialog-centered
    .modal-content
      .modal-header
        %h5#mapModalLabel.modal-title= t('views.post_modal.location_map')
        %button.btn-close.d-none{ value: 'Close', type: :button, aria: { label: 'Close' }, data: { bs_dismiss: 'modal' }}
      .modal-body
        #map
      .modal-footer.justify-content-between
        %button.btn.btn-primary.back-btn{ data: { bs_dismiss: 'modal', bs_target: '#postModal', bs_toggle: 'modal' }}
          = t('back')
        %button.btn.btn-success#confirm-location{ data: { controller: 'maps', action: 'click->maps#confirm_location', bs_dismiss: 'modal', bs_target: '#postModal', bs_toggle: 'modal' }}
          = t('views.post_modal.confirm_location')